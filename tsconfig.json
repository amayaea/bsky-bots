{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@bsky-bots/common": ["../../common/src"]
    }
  },
  "include": ["common/src", "bots/*/src"],
  "exclude": ["node_modules", "dist"]
}
